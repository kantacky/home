{
  "mcpServers": {
    "MCP_DOCKER": {
      "command": "docker",
      "args": [
        "mcp",
        "gateway",
        "run"
      ]
    },
    "figma": {
      "type": "http",
      "url": "https://mcp.figma.com/mcp"
    },
    "firebase": {
      "command": "npx",
      "args": [
        "firebase-tools@latest",
        "mcp"
      ]
    },
    "notion": {
      "type": "http",
      "url": "https://mcp.notion.com/mcp"
    },
    "xcode": {
      "type": "stdio",
      "command": "xcrun",
      "args": [
        "mcpbridge"
      ],
      "env": {}
    },
    "zotero": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/54yyyu/zotero-mcp.git",
        "zotero-mcp"
      ],
      "env": {
        "ZOTERO_LOCAL": "true"
      }
    }
  }
}