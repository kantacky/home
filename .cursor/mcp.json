{
  "mcpServers": {
    "MCP_DOCKER": {
      "command": "docker",
      "args": ["mcp", "gateway", "run"]
    },
    "apple-docs": {
      "command": "npx",
      "args": ["apple-doc-mcp-server@latest"]
    },
    "figma": {
      "type": "http",
      "url": "https://mcp.figma.com/mcp"
    },
    "firebase": {
      "command": "npx",
      "args": ["firebase-tools@latest", "mcp"]
    },
    "next-devtools": {
      "command": "npx",
      "args": ["-y", "next-devtools-mcp@latest"]
    },
    "notion": {
      "type": "http",
      "url": "https://mcp.notion.com/mcp"
    },
    "zotero": {
      "command": "uvx",
      "args": [
        "--from",
        "git+https://github.com/54yyyu/zotero-mcp.git",
        "zotero-mcp"
      ],
      "env": {
        "ZOTERO_LOCAL": "true"
      }
    }
  }
}
